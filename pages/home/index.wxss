/* 公共样式 */
page {
  background: #f5f5f5;
  font-size: 28rpx;
}

/* 轮播图 */
.swiper {
  height: 400rpx;
}
.swiper-img {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  padding: 30rpx 0;
  background: #fff;
}
.entry-item {
  width: 25%;
  text-align: center;
}
.entry-icon {
  width: 80rpx;
  height: 80rpx;
}
.entry-text {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 双列布局 */
.double-column {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}
.big-column {
  width: 346rpx;
}
.big-column image{
  width: 346rpx;
  height: 346rpx;
}
.column-img {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.img-desc {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0,0,0,0.5);
  color: #fff;
  padding: 4rpx;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 标签切换 */
.tabs {
  display: flex;
  padding: 30rpx;
  background: #fff;
}
.tab-item {
  margin-right: 28rpx;
  color: #666;
  padding: 10rpx 0;
}
.tab-item.active {
  color: #55bf9b;
  border-bottom: 4rpx solid #55bf9b;
}

/* 列表项 */
.list-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  border-bottom: 1px solid #eee;
}
.item-img {
  width: 40%;
  height: 200rpx;
}
.item-content {
  width: 60%;
  padding-left: 20rpx;
}
.item-title {
  font-size: 32rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-price{
  margin-top: 4rpx;
  color: #666;
  font-size: 22rpx;
}
picker{
  background: #fff;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.venue-info-container{
  border-bottom: 1px solid #eee;
}

/* 消息入口 */
.message-entrance {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #55bf9b, #4facfe);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(85, 191, 155, 0.3);
  transition: all 0.3s ease-out;
  z-index: 1000;
}

.message-entrance:active {
  transform: scale(0.95);
}

.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  min-width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.4);
}