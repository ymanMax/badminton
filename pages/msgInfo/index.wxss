/* 消息列表页面样式 */
page {
  background: #f5f5f5;
  font-size: 28rpx;
}

.message-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

/* 消息列表 */
.message-list {
  margin-top: 20rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.message-item.unread {
  background: #f8f9ff;
}

.message-item:active {
  background: #f5f5f5;
}

/* 消息图标 */
.message-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.message-icon.activity {
  background: linear-gradient(135deg, #55bf9b, #4facfe);
}

.message-icon.order {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
}

.message-icon.points {
  background: linear-gradient(135deg, #feca57, #ff9ff3);
}

.message-icon.system {
  background: linear-gradient(135deg, #48dbfb, #0abde3);
}

/* 消息内容 */
.message-content {
  flex: 1;
  min-width: 0;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.message-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.message-item.unread .message-title {
  color: #55bf9b;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  margin-left: 16rpx;
}

.message-body {
  overflow: hidden;
}

.message-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.message-item.unread .message-text {
  color: #555;
}

/* 未读标识 */
.unread-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ff4757;
  border-radius: 50%;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 滑动操作 */
.swipe-actions {
  display: flex;
  height: 100%;
}

.action-delete {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  background: #ff4757;
  color: white;
  font-size: 26rpx;
  height: 100%;
}

/* 空状态 */
.empty-state {
  margin-top: 200rpx;
}