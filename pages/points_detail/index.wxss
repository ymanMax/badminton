.points-detail {
  background: #f7f8f9;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 头部积分余额样式 */
.points-header {
  background: linear-gradient(135deg, #FF6B6B 0%, #FFD93D 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 107, 0.3);
}

.header-title {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.header-balance {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 15rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.header-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

/* 积分明细列表样式 */
.points-list {
  padding: 0 30rpx;
}

.points-item {
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 0;
  padding: 30rpx 0;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f7f8fa;
  margin-right: 20rpx;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-type {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.item-time {
  font-size: 26rpx;
  color: #999;
}

.item-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

.amount-value {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.amount-increase {
  color: #07c160;
}

.amount-decrease {
  color: #f53f3f;
}

.amount-balance {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态样式 */
.loading-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  margin-top: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
  margin-left: 15rpx;
}

/* 没有更多数据样式 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  margin-top: 20rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #ccc;
}

/* 空数据状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  line-height: 1.6;
}