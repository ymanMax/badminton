.issueDetail {
  padding-bottom: 100rpx;
}
.ope_btn1 {
  width: calc(100% - 48rpx);
  line-height: 70rpx;
  left: 24rpx;
  bottom: 24rpx;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
}
input{
  font-size: 34rpx;
}
picker{
  width: 320rpx;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  background: #fff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.time-filter-container{
  padding: 24rpx 24rpx 40rpx;
}
.info_item{
  width: 23%;
  font-size: 26rpx;
  text-align: center;
  color: #e64340;
  background: #fff;
  padding: 12rpx 0;
  margin-top: 40rpx;
  border: 1px solid #e64340;
}
.info_item.disabled{
  color: #888;
  border: 1px solid #888;
  background: #ddd;
}
.mask_box{
  top: 50%;
  left: 3%;
  width: 94%;
  transform: translate(0, -50%);
  position: absolute;
  background: #fff;
  border-radius: 12rpx;
}
.close{
  top: 24rpx;
  right: 24rpx;
  position: absolute;
}