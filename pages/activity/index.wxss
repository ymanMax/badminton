/* 列表项 */
.list-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  border-bottom: 1px solid #eee;
}
.item-img {
  width: 36%;
  height: 200rpx;
}
.item-content {
  width: 60%;
  color: #757575;
  padding-left: 20rpx;
}
.item-title {
  width: 80%;
  font-size: 32rpx;
  color: #000;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-desc {
  font-size: 26rpx;
  color: #000;
  margin: 18rpx 0 12rpx;
  display: block;
}

picker{
  font-size: 30rpx;
  background: #fff;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.route-status{
  width: 120rpx;
  text-align: center;
  border-radius: 8rpx;
  padding: 6rpx 12rpx;
  margin-top: 20rpx;
  color: #fff;
  background: #55bf9b;
}
.empty{
  background: #e64340;
  margin-left: 24rpx;
}
.ope_btn1{
  right: 24rpx;
  font-size: 24rpx;
}
.ope_btn1.color{
  background: #e64340;
}

/* 分享按钮 */
.share_btn {
  right: 120rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #55bf9b;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.share_btn:active {
  background: #44a889;
  transform: translateY(-50%) scale(0.95);
}