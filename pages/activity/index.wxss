/* 列表项 */
.list-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  border-bottom: 1px solid #eee;
}
.item-img {
  width: 36%;
  height: 200rpx;
}
.item-content {
  width: 60%;
  color: #757575;
  padding-left: 20rpx;
}
.item-title {
  width: 80%;
  font-size: 32rpx;
  color: #000;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-desc {
  font-size: 26rpx;
  color: #000;
  margin: 18rpx 0 12rpx;
  display: block;
}

picker{
  font-size: 30rpx;
  background: #fff;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.route-status{
  width: 120rpx;
  text-align: center;
  border-radius: 8rpx;
  padding: 6rpx 12rpx;
  margin-top: 20rpx;
  color: #fff;
  background: #55bf9b;
}
.empty{
  background: #e64340;
  margin-left: 24rpx;
}
.ope_btn1{
  right: 24rpx;
  font-size: 24rpx;
}
.ope_btn1.color{
  background: #e64340;
}

/* 评分相关样式 */
.star-icon {
  color: #ff6b35;
  font-size: 24rpx;
}

.star-rating.active {
  color: #ff6b35;
}

.rate-btn {
  padding: 8rpx 16rpx;
  background: rgba(85, 191, 155, 0.1);
  border-radius: 16rpx;
}

/* 评论区域样式 */
.comments-section {
  font-size: 26rpx;
}

.comment-header {
  margin-bottom: 8rpx;
}

.commenter-name {
  font-size: 28rpx;
}

.comment-rating {
  font-size: 22rpx;
}

.comment-content {
  font-size: 26rpx;
  line-height: 1.5;
  color: #666;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.toggle-comments {
  margin-top: 15rpx;
  padding: 10rpx 0;
  text-align: center;
}

.no-comments {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 评分弹窗样式 */
.rating-modal-content {
  padding: 20rpx;
}

.activity-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.rating-stars .star {
  font-size: 50rpx;
  margin: 0 10rpx;
  color: #ddd;
  transition: color 0.3s ease;
}

.rating-stars .star.active {
  color: #ff6b35;
}

.comment-input-section {
  margin-top: 30rpx;
}

.comment-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.4;
  box-sizing: border-box;
  background: #fafafa;
}

.word-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
}