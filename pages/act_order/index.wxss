page{
  height: 100%;
}
.order_box{
  height: 100%;
  overflow: auto;
  background-color: #f7f8f9;
}
.order_item{
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-top: 12rpx;
  background-color: #fff;
}
.ope_btn{
  top: 20rpx;
  right: 30rpx;
  background: #e64340;
  color: #fff;
  padding: 8rpx 30rpx;
  border-radius: 80rpx;
  font-size: 24rpx;
}
.ope_btn:active{
  opacity: .6;
}
.order_item:active{
  opacity: .6;
}
.order_item:last-child{
  margin-bottom: 0;
}
.order_status3{
  color: #e64340;
}
.order_status2{
  color: #888888;
}
.order_status1{
  color: #0bc960;
}
.order_status0{
  color: #f18832;
}