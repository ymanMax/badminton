.top_box {
  overflow: hidden;
  border-radius: 12rpx;
}
.strategy-item {
  display: flex;
  padding: 24rpx;
  background: #fff;
  justify-content: space-between;
  border-top: 1px solid #eee;
}

.strategy-image {
  width: 48%;
  height: 150rpx;
  border-radius: 10rpx;
}

.strategy-description {
  font-size: 26rpx;
  line-height: 1.5;
  padding: 12rpx;
}
